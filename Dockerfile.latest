FROM debian:trixie-slim

RUN apt-get update && apt-get install -y \
    ca-certificates \
    libssl3t64 \
    && rm -rf /var/lib/apt/lists/*

# Copy the binary
COPY docker-build/zerofs /usr/local/bin/zerofs

RUN chmod +x /usr/local/bin/zerofs

RUN useradd -m -u 1001 zerofs

USER zerofs

# Default ports that might be used - actual configuration comes from TOML file
EXPOSE 2049 5564 10809

ENTRYPOINT ["zerofs"]
