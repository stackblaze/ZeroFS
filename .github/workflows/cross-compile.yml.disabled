name: Cross Compile

on:
  pull_request:
    branches: ["main"]
  workflow_dispatch:

env:
  CARGO_TERM_COLOR: always

jobs:
  cross-compile:
    name: Cross compile for ${{ matrix.target }}
    runs-on: ${{ matrix.os }}
    strategy:
      matrix:
        include:
          - target: x86_64-unknown-linux-gnu
            arch: amd64
            os: ubuntu-latest
            platform: linux
          - target: aarch64-unknown-linux-gnu
            arch: arm64
            os: ubuntu-latest
            platform: linux
          - target: armv7-unknown-linux-gnueabihf
            arch: armv7
            os: ubuntu-latest
            platform: linux
          - target: i686-unknown-linux-gnu
            arch: i686
            os: ubuntu-latest
            platform: linux
          - target: powerpc64le-unknown-linux-gnu
            arch: ppc64le
            os: ubuntu-latest
            platform: linux
          - target: s390x-unknown-linux-gnu
            arch: s390x
            os: ubuntu-latest
            platform: linux
          - target: riscv64gc-unknown-linux-gnu
            arch: riscv64
            os: ubuntu-latest
            platform: linux
          - target: x86_64-apple-darwin
            arch: x86_64
            os: macos-latest
            platform: darwin
          - target: aarch64-apple-darwin
            arch: aarch64
            os: macos-latest
            platform: darwin

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Install Rust
        uses: dtolnay/rust-toolchain@stable
        with:
          targets: ${{ matrix.target }}

      - name: Install cross (Linux only)
        if: matrix.platform == 'linux'
        run: |
          cargo install cross --git https://github.com/cross-rs/cross

      - name: Build with cross (Linux)
        if: matrix.platform == 'linux'
        working-directory: zerofs
        run: |
          cross build --profile ci --target ${{ matrix.target }}

      - name: Build with cargo (macOS)
        if: matrix.platform == 'darwin'
        working-directory: zerofs
        run: |
          cargo build --profile ci --target ${{ matrix.target }}

      - name: Prepare binary
        run: |
          mkdir -p artifacts
          cp zerofs/target/${{ matrix.target }}/ci/zerofs artifacts/zerofs-${{ matrix.platform }}-${{ matrix.arch }}
          chmod +x artifacts/zerofs-${{ matrix.platform }}-${{ matrix.arch }}

      - name: Upload artifacts
        uses: actions/upload-artifact@v4
        with:
          name: zerofs-${{ matrix.platform }}-${{ matrix.arch }}
          path: artifacts/zerofs-${{ matrix.platform }}-${{ matrix.arch }}
          retention-days: 7

  create-release-artifacts:
    name: Create combined release artifacts
    needs: cross-compile
    runs-on: ubuntu-latest
    if: github.event_name == 'push' && github.ref == 'refs/heads/main'
    
    steps:
      - name: Download all artifacts
        uses: actions/download-artifact@v4
        with:
          path: artifacts

      - name: List artifacts
        run: |
          ls -la artifacts/
          ls -la artifacts/*/

      - name: Create tarball
        run: |
          mkdir -p release
          for arch_dir in artifacts/*/; do
            if [ -d "$arch_dir" ]; then
              cp "$arch_dir"* release/
            fi
          done
          cd release
          tar czf ../zerofs-multiplatform.tar.gz zerofs-*
          cd ..
          sha256sum zerofs-multiplatform.tar.gz > zerofs-multiplatform.tar.gz.sha256

      - name: Upload combined artifacts
        uses: actions/upload-artifact@v4
        with:
          name: zerofs-multiplatform
          path: |
            zerofs-multiplatform.tar.gz
            zerofs-multiplatform.tar.gz.sha256
          retention-days: 30

      - name: Display SHA256 checksums
        run: |
          echo "SHA256 checksums for individual binaries:"
          cd release
          sha256sum zerofs-*